@page
@using Microsoft.Extensions.Localization
@using Acme.SaleProject.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Acme.SaleProject.Web.Pages.Customers

@model CreateModalModel
@inject IStringLocalizer<SaleProjectResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Customer" asp-page="/Customers/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewCustomer"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>