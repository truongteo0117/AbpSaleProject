@page
@using Acme.SaleProject.Localization
@using Acme.SaleProject.Web.Pages.Customers
@using Microsoft.Extensions.Localization
@model IndexModel
@inject IStringLocalizer<SaleProjectResource> L
@section scripts
    {
    <abp-script src="/Pages/Customers/Index.js" />
}
<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Customers"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="NewCustomerButton"
                            text="@L["NewCustomer"].Value"
                            icon="plus"
                            button-type="Primary" />
                <abp-button id="ImportExcel"
                            text="@L["ImportExcel"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="CustomersTable"></abp-table>
    </abp-card-body>
</abp-card>